{
  "expo": {
    "name": "calm-on",
    "slug": "calm-on",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.calmon",
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "This app saves user colored photos to the device"
      }
    },
    "android": {
      "permissions": ["WRITE_EXTERNAL_STORAGE"],
      "package": "org.calm_on" 
    },
    "androidNavigationBar": {
      "visible": "sticky-immersive"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
